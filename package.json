{
  "name": "bluestaq-document-component",
  "packageManager": "yarn@4.10.3",
  "scripts": {
    "ng": "ng",
    "dev": "concurrently -k -n FRONTEND,BACKEND -c green,yellow \"yarn run start\" \"yarn run server\"",
    "dev:frontend": "yarn run start",
    "dev:server": "tsx src/server.ts",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "server": "tsx src/server.ts",
    "test": "ng test --watch=false",
    "test:watch": "ng test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,vue}\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.9",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.8",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "ng2-pdf-viewer": "^10.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@eslint/css": "^0.14.0",
    "@eslint/js": "^9.38.0",
    "@types/cors": "^2",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jasmine-core": "~5.9.0",
    "jiti": "^2.6.1",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.46.2"
  }
}
